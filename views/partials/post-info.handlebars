<article class="post">
  <div class="title">
    <a href="{{post.id}}" target="_blank">{{title}}</a>
    <span>({{post_title}})</span>
  </div>
  <div class="meta">
   {{format_plural "point" vote_count}} by {{user.username}} 
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>
